<main>
    <div class="body-title">
        <h1>Register</h1>
    </div>
    <div class="form-container">
        <% if (locals.errors) {%>
            <ul>
                <% errors.forEach(function(error) { %>
                <li><%= error.msg %></li>
                <% }); %>
            </ul>
        <% } %>
        <form action="/register" method="post">
            <div class="form-group">
                <label>
                    Username
                    <input type="text" minlength="3" maxlength="255" name="username" required>
                </label>
                <label>
                    Password
                    <input type="password" minlength="6" maxlength="255" name="password" required>
                </label>
            </div>
            <br>
            <div class="form-group">
                <label>
                    First name
                    <input type="text" maxlength="255" name="first_name">
                </label>
                <label>
                    Last name
                    <input type="text" maxlength="255" name="last_name">
                </label>
            </div>
            <button type="submit">Register</button>
        </form>
    </div>
    <div class="register-container">
        <h2>Already have an account?</h2>
        <a href="/log-in">Log in</a>
    </div>
</main>
